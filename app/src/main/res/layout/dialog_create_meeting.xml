<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <LinearLayout
        android:padding="20dp"
        android:orientation="vertical"
        android:background="@drawable/bg_rounded_white_01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:textColor="@color/color_main"
            android:textSize="20sp"
            android:text="약속 위치 정보"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginRight="6dp"
                android:gravity="center"
                android:textColor="@color/color_main"
                android:textSize="16sp"
                android:text="주소 :"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_address"
                android:layout_weight="1"
                android:gravity="center|left"
                android:textColor="@color/color_main"
                android:textSize="16sp"
                android:text=""
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginRight="6dp"
                android:gravity="center"
                android:textColor="@color/color_main"
                android:textSize="16sp"
                android:text="시간 :"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView

                android:layout_weight="1"
                android:gravity="center|left"
                android:textColor="@color/color_main"
                android:textSize="16sp"
                android:text="미구현"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button

                android:id="@+id/btn_cancel"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:textSize="16sp"
                android:background="@drawable/bg_rounded_btn_cancel_default_01"
                android:text="닫기"
                android:textColor="@color/color_main"
                android:layout_width="0dp"
                android:layout_height="50dp"/>
            <Button

                android:id="@+id/btn_confirm"
                android:layout_weight="1"
                android:textSize="16sp"
                android:background="@drawable/bg_rounded_btn_confirm_default_01"
                android:text="약속 장소 만들기"
                android:textColor="@color/white"
                android:layout_width="0dp"
                android:layout_height="50dp"/>
        </LinearLayout>


    </LinearLayout>



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    </LinearLayout>


</RelativeLayout>